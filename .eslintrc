{
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0,
      "import/no-extraneous-dependencies": 0,
      "no-unused-vars": "warn",
    },
    "settings": {
      "import/resolver": {
        webpack: {
          config: 'webpack/base.js'
        }
      }
    },
    "env": {
      "mocha": true
    },
    "globals": {
      "React": true,
      "ReactDOM": true,
      "window": true,
      "document": true,
      "__DEV__": true,
      "__CLIENT__": true,
      "__SERVER__": true
    },
    "plugins": [
      "react"
    ]
}
